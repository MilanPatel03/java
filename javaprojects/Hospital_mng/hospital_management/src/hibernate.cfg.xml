<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hospital_mng</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<mapping resource="model/Admin.hbm.xml" />
		<mapping resource="model/Appointment.hbm.xml" />
		<mapping resource="model/Contact.hbm.xml" />
		<mapping resource="model/Doctor.hbm.xml" />
		<mapping resource="model/DoctorSchedule.hbm.xml" />
		<mapping resource="model/Facility.hbm.xml" />
		<mapping resource="model/Department.hbm.xml" />
		<mapping resource="model/Patient.hbm.xml" />
	</session-factory>
</hibernate-configuration>
